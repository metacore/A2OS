MODULE Math;	(** portable *)
(** AUTHOR "?"; PURPOSE "Math utility module (REAL)"; *)

(* Aos version - requires floating-point instruction support. *)

IMPORT SYSTEM;

CONST
	e* = 2.7182818284590452354E0;
	pi* = 3.14159265358979323846E0;

TYPE
	Value = REAL;

PROCEDURE -Sin(x: Value):Value;
CODE
#IF I386 THEN
	FLD [ESP]
	FSIN
	#IF ~LEGACY THEN
		FSTP [ESP]
		MOVSS XMM0, [ESP]
	#END
	POP EAX
#ELSIF AMD64 THEN
	FLD [RSP]
	FSIN
	#IF ~LEGACY THEN
		FSTP [RSP]
		MOVSS XMM0, [RSP]
	#END
	POP RAX
#ELSE
	unimplemented
#END
END Sin;

