PROCEDURE -Ln(x: Value):Value;
CODE
#IF I386 THEN
	FLD1
	FLDL2E
	FDIVP
	FLD [ESP]
	FYL2X
	#IF ~LEGACY THEN
		FSTP [ESP]
		MOVSS XMM0, [ESP]
	#END
	POP EAX
#ELSIF AMD64 THEN
	FLD1
	FLDL2E
