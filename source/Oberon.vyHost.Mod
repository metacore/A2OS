PROCEDURE StringLength* (s: ARRAY OF CHAR): Index;
	VAR i: Index;
BEGIN
	i := 0;   WHILE (i < LEN(s)) & (s[i] # 0X) DO INC(i) END;
	RETURN i
END StringLength;

PROCEDURE StringAppend* (extra: ARRAY OF CHAR;  start: Index;   VAR dest: ARRAY OF CHAR;  VAR pos: Index);
	(*= Append extra to dest. Always adds a stopping 0X *)
BEGIN
	WHILE extra[start] # 0X   DO dest[pos] := extra[start];   INC(start);   INC(pos) END;
	dest[pos] := 0X
END StringAppend;


PROCEDURE StringAppendInt* (x, n: LONGINT;  VAR dest: ARRAY OF CHAR;  VAR pos: Index);
	(*= LONGINT to character string.
	append x as string at pos of dest; if n>0, fill with leading spaces;
	pos is moved to new end *)
	VAR i: INTEGER;   x0: LONGINT;
	a: ARRAY 11 OF CHAR;
BEGIN
	i := 0;   (* FOF changed *)
	IF x < 0 THEN
		IF x = MIN(LONGINT) THEN StringAppend(" -2147483648", 0, dest, pos);   RETURN
		ELSE DEC(n);   x0 := - x
		END
	ELSE x0 := x
	END;
	REPEAT
		a[i] := CHR(x0 MOD 10 + 30H);   x0 := x0 DIV 10;   INC(i)
	UNTIL x0 = 0;
	WHILE n > i DO dest[pos] := " ";   DEC(n);  INC(pos) END;
	IF x < 0 THEN dest[pos] := "-";  INC(pos)  END;
	REPEAT DEC(i);   dest[pos] := a[i];  INC(pos) UNTIL i = 0;
	dest[pos] := 0X
END StringAppendInt;

PROCEDURE StringAppendHex* (x: LONGINT;  VAR dest: ARRAY OF CHAR;   VAR pos: Index);
	(* no leading space used *)
	VAR i: INTEGER;   y: LONGINT;
	a: ARRAY 10 OF CHAR;
BEGIN
	i := 0;
	REPEAT y := x MOD 10H;
		IF y < 10 THEN a[i] := CHR(y + 30H) ELSE a[i] := CHR(y + 37H) END;
		x := x DIV 10H;   INC(i)
	UNTIL i = 8;
	REPEAT DEC(i);   dest[pos] := a[i];   INC(pos) UNTIL i = 0;
	dest[pos] := 0X
END  StringAppendHex;

