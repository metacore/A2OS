	ASSERT(ystep > 0, 104); 	end := xstart + (count - 1) * xstep + 1;
	ASSERT(end <= LEN(x), 105); 	ASSERT(ystart + (count - 1) * ystep + 1 <= LEN(y), 106);
	IF count = 0 THEN RETURN ZERO END;
	IF count = 1 THEN
