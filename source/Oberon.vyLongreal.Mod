PROCEDURE SortTwoDepArrays* (VAR reg, resp: ARRAY OF real);
	VAR help: POINTER TO ARRAY OF real;
	indicator: POINTER TO ARRAY OF index;
	i, len: index;
BEGIN
	len := LEN(reg);
	NEW(indicator, len); NEW(help, len);
	FOR i := 0 TO len - 1 DO
		indicator[i] := i;
		help[i] := resp[i]
